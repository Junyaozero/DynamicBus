<form bindsubmit="btnSubmit">
<view class="content">
    <view class="account">
        <view class="title">账号</view>
        <view class="num">
            <input name="userName" selectable="true" bindinput="userName" placeholder="请输入用户名/手机号" placeholder-style="color:#999999;"/>
        </view>
    </view>
    <view class="hr"></view>
    <view class="account">
        <view class="title">密码</view>
        <view class="num">
            <input name="userPwd" selectable="true" bindinput="userPwd" placeholder="请输入密码" password placeholder-style="color:#999999;"/>
        </view>
    </view>
    <view class="hr"></view>
    <button class="btn" form-type="submit" disabled="{{disabled}}" type="{{btnstate}}" bindtap="login">登录</button>



    <view class="operate">
        <view><navigator bindtap="toRegister" url="pages/mobile/mobile">手机快速注册</navigator></view>
        <view><navigator bindtap="toFindPwd" url="/pages/findPwd/findPwd">找回密码</navigator></view>
    </view>
    <view class="login">
        <view><image src="../images/wxlogin.png" style="width: 60px;height: 60px;"></image></view>
        <view><image src="../images/QQlogin.png" style="width: 60px;height: 60px;"></image></view>
    </view>
</view>
</form>