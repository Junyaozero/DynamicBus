<!--mobile.wxml-->
<form bindsubmit="btnSubmit">
<view class="content">
    <view class="hr"></view>
    <view class="numbg">
        <view>+86</view>
        <view><input name="userName" type="text"  selectable="true" placeholder="请输入手机号" maxlength="11" bindinput="userName"/></view>
    </view>
    <view class="hr"></view>
    <view class="numbg">
        <view><text decode="{{true}}">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</text></view>
        <view><input name="userPwd" type="password"  selectable="true" placeholder="请设置新密码" maxlength="20" bindinput="userPwd"/></view>
    </view>
    <view class="hr"></view>
    <view class="numbg">
        <view><text decode="{{true}}">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</text></view>
        <view><input name="reUserPwd" type="password"  selectable="true" placeholder="请确认新密码" maxlength="20" bindinput="reUserPwd"/></view>
    </view>
    <view>
        <view class="xieyi">
            <icon type="success" color="red" size="18"></icon>
            <text class="agree">同意</text>
            <text class="opinion">用户注册协议</text>
        </view>
    </view>
    <button class="btn" form-type="submit" disabled="{{disabled}}" type="{{btnstate}}">确认</button>
</view>
</form>