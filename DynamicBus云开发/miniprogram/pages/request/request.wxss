/* pages/request/request.wxss */

.list-msg {
    padding: 0 20rpx;
    position: relative;
  }

  .list-msg1 {
    height: 60rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    /* 黑体 */
    font-weight: bold;
  }
  
  .list-msg .list-msg2 {
    height: 60rpx;
    display: flex;
    width: 400rpx;
    align-items: center;
    justify-content: space-between;
    border: 1px solid #ccc;
    padding: 0 10rpx;
    margin-left: 50rpx;
  }
  .list-box2 {
    height: 60rpx;
    display: flex;
    width: 400rpx;
    align-items: center;
    justify-content: space-between;
    border: 1px solid #ccc;
    padding: 0 10rpx;
    margin-left: 50rpx;
    
  }
  .list-box2::after{
    content: '';
    margin-top: 20rpx;
    border-left: 20rpx solid  transparent;
    border-right: 20rpx solid transparent;
    border-top: 20rpx solid rgb(17, 17, 17);
    border-bottom: 20rpx solid transparent;
  }
  .list-msg2::after{
       content: '';
       margin-top: 20rpx;
       border-left: 20rpx solid  transparent;
       border-right: 20rpx solid transparent;
       border-top: 20rpx solid black;
       border-bottom: 20rpx solid transparent;
  }
  
  .select_box {
    background-color: rgb(241, 239, 239); 
    padding: 0 10rpx;
    width: 55%;
    position: absolute;
    top: 170rpx;
    left: 195rpx;
    z-index: 1;
    overflow: hidden;
  }
  .select2_box {
    background-color: rgb(241, 239, 239);
    padding: 0 10rpx;
    width: 55%;
    position: absolute;
     /* 上下调节下车地点下拉列表 */
    top: 530rpx;   
    /* 左右调节下车地点下拉列表 */
    left: 195rpx;
    z-index: 1;
    overflow: hidden;
  }
  

  .scroll-bar{
    height: 300rpx;
 }


  .select_one {
    height: 60rpx;
    line-height: 60rpx;
    border-bottom: 1px solid #ccc;
  }